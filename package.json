{
    "name": "rascript-vscode",
    "displayName": "RAScript for Visual Studio Code",
    "description": "RAScript language support for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "rzumer",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "rascript",
            "aliases": ["RAScript", "rascript"],
            "extensions": [".ras"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "rascript",
            "scopeName": "source.ras",
            "path": "./syntaxes/rascript.tmLanguage.json"
        }]
    }
}