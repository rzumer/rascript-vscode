{
    "name": "rascript-vscode",
    "displayName": "RAScript for Visual Studio Code",
    "description": "RAScript language support for Visual Studio Code",
    "icon": "icon.png",
    "version": "0.1.0",
    "publisher": "rzumer",
    "repository": {
        "type": "git",
        "url": "https://github.com/rzumer/rascript-vscode.git"
    },
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "rascript",
                "aliases": [
                    "RAScript",
                    "rascript"
                ],
                "extensions": [
                    ".rascript"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rascript",
                "scopeName": "source.rascript",
                "path": "./syntaxes/rascript.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "rascript",
                "path": "./snippets/rascript.json"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}