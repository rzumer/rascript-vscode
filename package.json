{
    "name": "rascript-vscode",
    "displayName": "RAScript for Visual Studio Code",
    "description": "RAScript language support for Visual Studio Code",
    "icon": "icon.png",
    "version": "0.2.5",
    "publisher": "rzumer",
    "repository": {
        "type": "git",
        "url": "https://github.com/rzumer/rascript-vscode.git"
    },
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rascript",
                "aliases": [
                    "RAScript",
                    "rascript"
                ],
                "extensions": [
                    ".rascript"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rascript",
                "scopeName": "source.rascript",
                "path": "./syntaxes/rascript.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "rascript",
                "path": "./snippets/rascript.json"
            }
        ]
    }
}